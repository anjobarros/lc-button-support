{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "limecuda/button",
  "version": "1.0.0",
  "title": "TF Button",
  "category": "design",
  "icon": "button",
  "description": "A Thermo Fisher brandâ€‘compliant button with sizing and style presets.",
  "keywords": [
    "button",
    "cta",
    "link"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "className": true,
    "customClassName": true,
    "typography": false,
    "spacing": false,
    "color": {
      "background": false,
      "text": false,
      "gradients": false,
      "link": false
    },
    "shadow": false,
    "border": false
  },
  "attributes": {
    "text": {
      "type": "string",
      "source": "html",
      "selector": "a .lc-button__label",
      "default": "Click Me"
    },
    "url": {
      "type": "string",
      "default": ""
    },
    "opensInNewTab": {
      "type": "boolean",
      "default": false
    },
    "relNoFollow": {
      "type": "boolean",
      "default": false
    },
    "relSponsored": {
      "type": "boolean",
      "default": false
    },
    "styleVariant": {
      "type": "string",
      "default": "primary"
    },
    "isFullWidth": {
      "type": "boolean",
      "default": false
    },
    "isOutline": {
      "type": "boolean",
      "default": false
    },
    "size": {
      "type": "string",
      "default": "rg"
    },
    "isDisabled": {
      "type": "boolean",
      "default": false
    },
    "primaryColor": {
      "type": "string",
      "default": "red"
    },
    "iconType": {
      "type": "string",
      "default": ""
    },
    "iconPosition": {
      "type": "string",
      "default": "right"
    }
  },
  "styles": [
    {
      "name": "primary",
      "label": "Primary",
      "isDefault": true
    },
    {
      "name": "secondary",
      "label": "Secondary"
    },
    {
      "name": "outline",
      "label": "Outline"
    },
    {
      "name": "information",
      "label": "Information"
    }
  ],
  "example": {
    "attributes": {
      "text": "Get Started",
      "styleVariant": "primary"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}