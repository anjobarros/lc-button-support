{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "limecuda/button",
	"version": "1.0.0",
	"title": "LC Button",
	"category": "design",
	"icon": "button",
	"description": "An opinionated LimeCuda button block with locked styling and style presets.",
	"keywords": ["button", "cta", "link"],
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"className": true,
		"customClassName": true,
		"typography": false,
		"spacing": false,
		"color": {
			"background": false,
			"text": false,
			"gradients": false,
			"link": false
		},
		"shadow": false,
		"border": false
	},
	"attributes": {
		"text": {
			"type": "string",
			"source": "html",
			"selector": "a",
			"default": "Click Me"
		},
		"url": {
			"type": "string",
			"default": ""
		},
		"opensInNewTab": {
			"type": "boolean",
			"default": false
		},
		"relNoFollow": {
			"type": "boolean",
			"default": false
		},
		"relSponsored": {
			"type": "boolean",
			"default": false
		},
		"styleVariant": {
			"type": "string",
			"default": "primary"
		},
		"isFullWidth": {
			"type": "boolean",
			"default": false
		},
		"isOutline": {
			"type": "boolean",
			"default": false
		},
        "size": {
            "type": "string",
            "default": "md"
        },
        "isDisabled": {
            "type": "boolean",
            "default": false
        }
    },
	"styles": [
		{ "name": "primary", "label": "Primary", "isDefault": true },
		{ "name": "secondary", "label": "Secondary" },
		{ "name": "outline", "label": "Outline" },
		{ "name": "information", "label": "Information" }
	],
  "example": {
    "attributes": {
      "text": "Get Started",
      "styleVariant": "primary"
    }
  },
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
